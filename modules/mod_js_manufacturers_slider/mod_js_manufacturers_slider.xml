<?xml version="1.0" encoding="utf-8"?>
<extension
    type="module"
    version="2.5"
    client="site"
    method="upgrade">
<name>JoomShopping - Manufacturers Slider</name>
	<creationDate>26.08.2013</creationDate>
    <author>ELLE</author>
    <authorEmail>support@joomext.ru</authorEmail>
    <authorUrl>joomext.ru</authorUrl>
    <copyright>Copyright 2013. JoomExt.ru. All rights reserved.</copyright>
    <license>GNU/GPL v.3 or later.</license>
    <version>1.0</version>
	<description>Manufacturers Slider for Joomshopping. Site: JoomExt.ru</description>
	<files>
		<filename module="mod_js_manufacturers_slider">mod_js_manufacturers_slider.php</filename>
        <filename>index.html</filename>
        <folder>tmpl</folder>
        <folder>assets</folder>
	</files>
    <languages>
        <language
            tag="en-GB">en-GB.mod_js_manufacturers_slider.ini</language>
		<language
            tag="ru-RU">ru-RU.mod_js_manufacturers_slider.ini</language>
    </languages>    
    <config>
        <fields name="params">
            <fieldset name="basic">  
                <field
                    name="show_logo"
                    type="radio"
                    default="1"
                    label="MOD_JS_SLIDER_SHOW_LOGO"
                    description="MOD_JS_SLIDER_SHOW_LOGO_DESC">
                    <option
                        value="0">JNO</option>
                    <option
                        value="1">JYES</option>
                </field>
                 <field
                    name="show_name"
                    type="radio"
                    default="1"
                    label="MOD_JS_SLIDER_SHOW_NAME"
                    description="MOD_JS_SLIDER_SHOW_NAME_DESC">
                    <option
                        value="0">JNO</option>
                    <option
                        value="1">JYES</option>
                </field>
                <field
                    name="sort"
                    type="list"
                    default="id"
                    label="MOD_JS_SLIDER_SORT"
                    description="MOD_JS_SLIDER_SORT_DESC">
                    <option
                        value="id">MOD_JS_SLIDER_ID</option>
                    <option
                        value="name">MOD_JS_SLIDER_NAME</option>
                    <option
                        value="order">MOD_JS_SLIDER_ORDERING</option>                        
                </field>
                <field
                    name="ordering"
                    type="radio"
                    default="asc"
                    label="MOD_JS_SLIDER_SORT"
                    description="MOD_JS_SLIDER_SORT_DESC">
                    <option
                        value="asc">MOD_JS_SLIDER_ASCENDING</option>
                    <option
                        value="desc">MOD_JS_SLIDER_DESCENDING</option>
                </field>
                 <field
                    name="auto_start"
                    type="radio"
                    default="0"
                    label="MOD_JS_SLIDER_AUTO_START"
                    description="MOD_JS_SLIDER_AUTO_START_DESC">
                    <option
                        value="0">JNO</option>
                    <option
                        value="1">JYES</option>
                </field>

            </fieldset>
            <fieldset
				name="advanced">
				<field
					name="layout"
					type="modulelayout"
					label="JFIELD_ALT_LAYOUT_LABEL"
					description="JFIELD_ALT_MODULE_LAYOUT_DESC" />

				<field
					name="moduleclass_sfx"
					type="text"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />

				<field
					name="cache"
					type="list"
					default="1"
					label="COM_MODULES_FIELD_CACHING_LABEL"
					description="COM_MODULES_FIELD_CACHING_DESC">
					<option
						value="1">JGLOBAL_USE_GLOBAL</option>
					<option
						value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>

				<field
					name="cache_time"
					type="text"
					default="900"
					label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
					description="COM_MODULES_FIELD_CACHE_TIME_DESC" />
				<field
					name="cachemode"
					type="hidden"
					default="static">
					<option
						value="static"></option>
				</field>
			</fieldset>

        </fields>
    </config> 
</extension>