<extension type="plugin" version="1.7" method="upgrade" group="jshoppingcheckout">
    <name>JoomShopping Plugin for Registration and entry</name>
    <creationDate>16.10.2012</creationDate>
    <version>1.0.1</version>
    <author>MAXXmarketing</author>
    <authorEmail>marketing@maxx-marketing.net</authorEmail>
    <authorUrl>http://www.webdesigner-profi.de</authorUrl>
    <copyright></copyright>
