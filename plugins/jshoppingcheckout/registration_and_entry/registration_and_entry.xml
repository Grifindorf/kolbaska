    <description>Plugin for Registration and entry</description> 
    <files>
        <filename plugin="registration_and_entry">registration_and_entry.php</filename>
		<filename>index.html</filename>
    </files>
	<params>
		<param name="remember" type="radio" default="1" label="remember">
			<option value="0">Off</option>
			<option value="1">On</option>
		</param> 
		<param name="redirect" type="text" label="redirect" size='70' description='default: index.php?option=com_jshopping'/>
	</params>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="remember" type="radio" default="1" label="remember">
					<option value="0">Off</option>
					<option value="1">On</option>
				</field>
				<field name="redirect" type="text" label="redirect" size='70' description='default: index.php?option=com_jshopping'/>
			</fieldset>
		</fields>
	</config>
</extension>